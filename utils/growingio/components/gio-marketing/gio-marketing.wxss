/* components/my-component.wxss */
.inner {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100000000;
  background-color: rgba(50, 50, 50, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.image {
  width: 80vw;
  height: 100vw;
}

.close {
  margin-top: 1.5vw;
  color: #fff;
  border: 1px solid #fff;
  font-size: 4vw;
  padding: 1vw;
  text-align: center;
  font-weight: bold;
  border-radius: 5vw;
  height: 6vw;
  width: 6vw;
}
