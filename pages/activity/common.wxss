
.info .range {
  font-size: 24rpx;
  color: #666
}
.gift {
  padding: 10rpx;
  background-color: #f5f5f5;
  border-top: 1px solid #ddd
}
.gift-title {
  font-size: 32rpx;
  text-align: center;
  border: 1px solid #00bcbd;
  color: #00bcbd;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  background-color: #fff;
}
.gift-wrap {
  width: 100%;
}
.gift-wrap .gift-list {
  display: flex;
  margin: 0 auto;
}
.gift-wrap .gift-list .gift-item {
  width: 276rpx;
  text-align: center;
}
.gift-img {
  width: 256rpx;
  height: 256rpx;
  border: 1px solid #00bcbd;
  border-radius: 10px;
}
.gift-name {
  font-size: 28rpx;
  color: #333
}
.gift-price {
  font-size: 28rpx;
  color: #666
}