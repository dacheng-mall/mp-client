.wrap {
  margin: 20rpx;
  border: 1px solid #eee;
  border-radius: 10rpx;
  background-color: #fff;
}
.activity-info {
  padding: 20rpx;
  padding-bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between
}
.sign {
  font-size: 32rpx;
  color: #00bcbd
}
.activity-info-right {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.title {
  font-size: 36rpx;
  color: #333
}
.institution,
.createTime {
  font-size: 28rpx;
  color: #666
}
.activity-products {
  padding: 0 20rpx;
}
.product {
  display: flex;
  flex-direction: row;
  margin: 10rpx 0 0;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  padding-right: 10rpx;
  overflow: hidden;
}
.img {
  width: 128rpx;
  height: 128rpx;
}
.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 10rpx
}
.product-info-title {
  font-size: 32rpx;
  color: #333
}
.product-info-price {
  font-size: 28rpx;
  color: #f66
}
.product-count {
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #999
}
.seller {
  display: flex;
  margin: 10rpx 0 0;
  justify-content: flex-end;
  margin-top: 20rpx;
  border-top: 2px dotted #eee;
  padding: 20rpx;
}
.seller .from {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #999
}
.seller-info {
  text-align: right;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-right: 10rpx;
  font-size: 28rpx;
  flex: 1
}
.seller image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%
}