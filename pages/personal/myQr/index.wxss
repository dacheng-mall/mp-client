.qr-wrap {
  width: 100%;
  position: relative;
  width: 240px;
  height: 240px;
  margin: 30px auto;

}
.qr {
  width: 240px;
  height: 240px;
}
.avatar {
  position: absolute;
  left: 50%;
  top: 50%;
  margin: -54px 0 0 -54px;
  width: 108px;
  height: 108px;
  border-radius: 50%;
}
.info {
  margin: 30px;
  text-align: center;
  font-size: 16px;
  color: #999
}
.title {
  font-size: 20px;
  color: #666;
  margin-bottom: 10px;
}