<view class="page-wrap wrap">
  <view class="header">
    <view class="avatar">
      <image wx:if="{{user && user.avatar}}" src="{{user.avatar}}" />
      <view wx:else>囧</view>
    </view>
    <view wx:if="{{user}}" class="user-info">
      <view class="name">{{user.name}}</view>
      <view class="inst" wx:if="{{user.userType === 4}}">{{user.institution.name}}</view>
      <view wx:if="{{user.userType === 4 && user.gradeName}}" class="inst grade" style="">
        {{user.gradeName}}
      </view>
    </view>
    <view wx:else class="user-info" bind:tap="login">
      <view class="name">注册/登录</view>
    </view>
    <view wx:if="{{user.userType === 2 }}" class="header-btn">
      <button bindtap="bindInst" class="btn-large btn-warning">加入机构</button>
    </view>
    <view wx:if="{{user.userType === 4 }}" class="header-btn">
      <button bindtap="bindInst" class="btn-small btn-success">修改机构信息</button>
    </view>
  </view>
  <view class="list">
    <listView data="{{menu}}" userType="{{user.userType}}" />
  </view>
</view>