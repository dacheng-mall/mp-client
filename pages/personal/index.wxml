<view class="page-wrap wrap">
  <view class="header">
    <view class="avatar">
      <image src="{{user.avatar}}" />
    </view>
    <view class="user-info">
      <view>
        <text class="name">{{user.name}}</text>
        <text wx:if="{{user.userType === 4}}" class="grade" style=""> ({{user.gradeName}})</text>
      </view>
      <view wx:if="{{user.userType === 2}}">
        <button size="mini" type="primary" bindtap="bindInst">立即注册成为业务员</button>
      </view>
      <view class="inst" wx:if="{{user.userType === 4}}">{{user.institution.name}}</view>
    </view>
  </view>
  <view class="list">
    <listView data="{{list}}" userType="{{user.userType}}" />
  </view>
</view>