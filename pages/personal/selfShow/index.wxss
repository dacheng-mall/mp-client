.wrap {
  display: flex;
  flex-direction: row;
  padding: 32px 20px;
  border-bottom: 1px solid #eee;
  margin-bottom: 10px;
  background-color: #f5f5f5
}
.wrap .avatar {
  width: 88px;
  height: 88px;
  border-radius: 50%;
  border: 1px solid #ddd;
  box-shadow: 0 0 5px #ccc;
}
.wrap .info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 10px;
}
.wrap .info .main {
  font-size: 40rpx;
  font-weight: 300;
  color: #000;
}
.wrap .info .sub {
  font-size: 32rpx;
  font-weight: 400;
  color: #999;
}
.btns {
  padding: 10px 20px
}
.btns .btn {
  margin: 10px 0
}
