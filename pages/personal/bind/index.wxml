<form bindsubmit="formSubmit" bindreset="formReset" style="flex: 1;">
  <view style="" class="wrap">
    <scroll-view class="form-wrap" scroll-y="{{true}}">
      <view class="section">
        <input class="input" value="{{institutionName}}" catchtap="pickInst" disabled="{{true}}" name="institutionId" placeholder="请选择所属机构" />
      </view>
      <view wx:if="{{grade.length > 0}}" class="section">
        <picker bindchange="changeGrade" mode="selector" range="{{grade}}" range-key="name" class="input" name="gradeId" placeholder="请选择所属机构">
          <view class="picker">{{gradeName || '请选择职级'}}</view>
        </picker>
      </view>
      <view class="section">
        <input class="input" name="name" placeholder="请输入真实姓名" />
      </view>
      <view class="section">
        <input class="input" name="code" placeholder="请输入工号" />
      </view>
      <view class="section">
        <input class="input" type="number" name="mobile" placeholder="请输入手机号" />
      </view>
      <view class="section">
        <input class="input" type="idcard" name="idCard" placeholder="请输入身份证号" />
      </view>
    </scroll-view>
    <view class="btn">
      <button type="primary" form-type="submit">加入机构</button>
    </view>
  </view>
</form>