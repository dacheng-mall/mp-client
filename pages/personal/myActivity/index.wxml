<nothing wx:if="{{list.length < 1}}" />
<scroll-view wx:else scroll-y="{{true}}">
  <block wx:for="{{list}}" wx:key="{{item.id}}">
    <view class="activiyItem" data-aid="{{item.activityId}}" catch:tap="tap">
      <image wx:if="{{item.image}}" class="img" src="{{source}}{{item.image}}" mode="aspectFill" />
      <view class="info">
        <view class="title">{{item.name}}</view>
        <view class="date">{{item.dateStart}}è‡³{{item.dateEnd}}</view>
      </view>
      <text class="status">{{item.statusName}}</text>
    </view>
  </block>
</scroll-view>