  <view class="list">
    <block wx:for="{{list}}" wx:key="{{item.id}}">
      <view class="item">
        <view class="customer" catch:tap="makePhoneCall" data-mobile="{{item.customerMobile}}">
          <image class="avatar" src="{{source}}{{item.productImage}}?imageView2/2/w/128" mode="aspectFill" />
          <view class="info">
            <view class="name">{{item.customerName}}</view>
            <view class="product">{{item.productName}}({{item.count}}件)</view>
            <view class="other">活动: {{item.activityName}}</view>
            <view class="other">时间: {{item.createTime}}</view>
          </view>
          <view class="status">{{item.status === 'waiting' ? '待签收' : '已签收'}}</view>
        </view>
      </view>
    </block>
    <view>{{loading ? '正在加载...' : ''}}</view>
  </view>
</view>