/* pages/personal/index.wxss */
.header {
  padding: 32rpx 0;
  background-color: #00bcbd;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.header .avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 0 20rpx;
  flex-shrink: 0;
  color: #ccc;
  position: relative;
}
.header .avatar image {
  width: 128rpx;
  height: 128rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 2px solid #fff;
  background-color: #ddd;
  float: left;
}
.header .avatar .editor {
  position: absolute;
  bottom: -5px;
  right: -5px;
  border-radius: 50%;
  background-color: #fff;
  width: 44rpx;
  height: 44rpx;
}
.header .user-info {
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
}
.header .user-info .name {
  font-size: 40rpx;
  color: #fff;
  word-break: break-all;
  margin-bottom: 4rpx;
}
.header .user-info .grade {
  font-size: 28rpx;
  color: #fff;
}
.header .user-info .inst {
  font-size: 28rpx;
  color: #fff;
  font-weight: 200
}

.header .user-info .grade {
  font-size: 24rpx;
}
.header-btn {
  margin: 0 20rpx;
  flex-shrink: 0;
}
.list {
  margin: 10px;
}
