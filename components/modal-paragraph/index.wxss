.btn {
  margin: 10px 0 0;
  background-color: #fff;
  width: 128px;
  opacity: 0.7;
  text-align: center;
  padding: 5px 0;
  border-radius: 20px;
}
.cont {
  position: fixed;
  z-index: 9999;
  background-color: #fff;
  height: 0;
  width: 100%;
  opacity: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  bottom: -100px
}
.cont .cont-wrap {
  flex: 1;
  overflow: auto;
}
.cont .bottom {
  height: 44px;
  text-align: center;
  padding: 20px 0 64px
}
