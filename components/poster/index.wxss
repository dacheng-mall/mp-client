@import "../../access/button.wxss";

.preview {
  background-color: #eee;
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  z-index: 9999;
  flex-direction: column;
}
.preview_img {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.preview_img image {
  background-color: #aaa;
  border-radius: 20rpx;
  box-shadow: 0 0 20px #999;
}
.button_wrap {
  height: 128rpx;
  background-color: #fff;
  border-top: 1px solid #ddd;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.button_wrap button {
  flex: auto;
  margin: 0 10rpx;
}
.canvas {
  position: absolute;
  left: 0;
  top: 0;
}
.btn {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  padding: 0 44rpx;
  font-size: 32rpx;
  background: linear-gradient(to right, #ff9933, #cc3f00);
  color: #fff;
  margin: 0 0 0 10px;
}
