.item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 10px;
  overflow: hidden;
}
.name {
  font-size: 28rpx;
  line-height: 24rpx;
}
.image-title {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 48rpx;
  width: 100%;
  background-color: rgba(255,255,255,0.7);
}
.image-title-text {
  line-height: 48rpx;
  font-size: 32rpx;
  color: #333;
  padding: 0 16rpx;
}
