<view bindtap="tap" wx:if="{{!data.userType || userType == data.userType}}" class="item" style="background-color: {{data.bgColor}}; width: {{width}}px;height: {{height}}px; margin-right: {{data.isRowEnd ? '0' : '10px'}}">
  <icon-x wx:if="{{!data.image && data.icon}}" type="{{data.icon}}" color="{{data.color}}" size="64" />
  <text wx:if="{{!data.image && data.icon}}" class="name" style="color: {{data.color}}">{{data.displayName}}</text>
  <image wx:if="{{data.image}}" src="{{source}}{{data.image}}" mode="widthFix" style="width: 100%; height: 100%" />
</view>