.list-wrap {
  margin: 16rpx 0;
  border-top: 1px solid #ddd;
}
.list-item {
  border-bottom: 1px solid #ddd;
  display: flex;
}
.list-item .label {
  width: 144rpx;
  background-color: #eee;
  padding: 8rpx 16rpx
}
.list-item .content {
  flex: 1;
  background-color: #f5f5f5;
  padding: 8rpx 16rpx
}
.list-item-even .label {
  background-color: #e5e5e5;
}
.list-item-even .content {
  background-color: #eee;
}